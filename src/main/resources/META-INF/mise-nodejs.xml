<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.github.l34130.mise.nodejs.node.ProjectNodeSetup"/>

        <projectConfigurable instance="com.github.l34130.mise.core.settings.MiseConfigurable"
                             displayName="Mise Settings"/>
    </extensions>
    <extensions defaultExtensionNs="JavaScript">
        <nodeRunConfigurationExtension
                implementation="com.github.l34130.mise.nodejs.runconfig.NodeRunConfigurationExtension"
                                   id="miseNodeJS"/>
    </extensions>
    <actions>
        <action id="com.github.l34130.mise.nodejs.node.ProjectNodeSetup"
                class="com.github.l34130.mise.nodejs.node.ProjectNodeSetup"
                text="Reload NodeJS Interpreter"
        >
            <add-to-group group-id="ch.mise.actions"/>
        </action>
    </actions>
</idea-plugin>
