<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.github.l34130.mise.goland.go.ProjectGoSdkSetup"/>

        <projectConfigurable instance="com.github.l34130.mise.core.settings.MiseConfigurable" displayName="Mise Settings"/>
    </extensions>
    <extensions defaultExtensionNs="com.goide">
        <runConfigurationExtension implementation="com.github.l34130.mise.gradle.runconfig.GoLandRunConfigurationExtension"
                                   id="miseGoLand"/>
    </extensions>

    <actions>
        <action id="com.github.l34130.mise.goland.go.ProjectGoSdkSetup"
                class="com.github.l34130.mise.goland.go.ProjectGoSdkSetup"
                text="Reload GOROOT"
        >
            <add-to-group group-id="ch.mise.actions"/>
        </action>
    </actions>
</idea-plugin>
