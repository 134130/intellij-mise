<idea-plugin require-restart="false">
    <extensions defaultExtensionNs="Pythonid">
        <runConfigurationExtension implementation="com.github.l34130.mise.pycharm.run.MisePythonRunConfigurationExtension"/>
        <!--suppress PluginXmlValidity -->
        <pythonCommandLineTargetEnvironmentProvider implementation="com.github.l34130.mise.pycharm.run.MisePythonCommandLineTargetEnvironmentProvider"/>
    </extensions>

    <actions>
        <action id="com.github.l34130.mise.pycharm.sdk.MisePythonSdkSetup"
                class="com.github.l34130.mise.pycharm.sdk.MisePythonSdkSetup"
                text="Reload Python SDK"
        >
            <add-to-group group-id="com.github.l34130.mise.actions"/>
        </action>
    </actions>

</idea-plugin>
